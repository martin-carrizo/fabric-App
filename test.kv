

<ListGridLayout>:
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        spacing: 20

        Button:
            text:'add fabric'
            on_press: main_grid.rows += 1
            on_press: root. add_instance(main_grid)
        
        Button:
            text: "add"
            on_press:root.add_quantity()    


        Button:
            text: "res"
            on_press:root.sub_quantity()


        GridLayout:
            id: main_grid
            cols:6
            rows:2

            Label:
                text:'name'

            Label: 
                text:'1,40'
            Label:
                text: '1,80'    
            Label:
                text: '2,30'
            Label:
                text:'R 1,40'
            Label:
                text:'R 1,80'
           

           


            


            
                

        
        
            
                    
                    


        

