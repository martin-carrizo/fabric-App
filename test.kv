<ListGridLayout>:
    spacing: dp(5)
    BoxLayout:
        orientation: 'vertical'
        id: mainbox
        spacing: dp(10)
        size_hint_y: None
        size: root.width, root.height
       
        MDTopAppBar:
            title: "Fabric App"
            anchor_title: "left"
            shadow_color: "blue"
            left_action_items: [["menu", lambda x: root.options_menu(x)]]
            right_action_items:
                [
                # ["dots-vertical", lambda x: root.app_settings(x)],
                ["cart", lambda x: root.add_instance(box_grid)],
                ["close", lambda x: app.stop()]
                
                ]
        MDRectangleFlatButton:
            text: "+"
            id: quantity_button
            on_press:root.stock_quantity()
        MDGridLayout:
            adaptive_height: True
            cols:6
            rows:1
            OneLineListItem:
                text:'name'
                size_hint_x:None
                width:dp(200)
                on_press: root.sort_fabric_by(self.text)
            OneLineListItem:
                text:'1,40'
                on_press: root.sort_fabric_by(self.text)
            OneLineListItem:
                text: '1,80' 
                on_press: root.sort_fabric_by(self.text)   
            OneLineListItem:
                text: '2,30'
                on_press: root.sort_fabric_by(self.text)
            OneLineListItem:
                text:'R 1,40'
                on_press: root.sort_fabric_by(self.text)
            OneLineListItem:
                text:'R 1,80'
                on_press: root.sort_fabric_by(self.text)

        MDScrollView:
            id: main_scroll
            do_scroll_x: False
            do_scroll_y: True
          
            MDBoxLayout:
                id: box_grid
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height